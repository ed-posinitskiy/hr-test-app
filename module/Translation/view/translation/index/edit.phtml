<?php
/** @var \TRanslation\Entity\Translation $translation */
$translation = $this->translation;
/** @var \Vacancy\Entity\Vacancy $vacancy */
$vacancy = $translation->getVacancy();
$title = $this->translate('Edit translation to vacancy') . ': ' . $vacancy->getTitle();
$this->headTitle($title);
$url = $this->url('translation/edit', array('id' => $translation->getId()));
/** @var \Translation\Form\TranslationEdit $form */
$form = $this->form;
$form->setAttribute('action', $url);
$form->setAttribute('class', 'form-horizontal');
$form->get('description')->setAttribute('style', 'width: 600px;');
$form->prepare();

?>

<h3><?php echo $title; ?></h3>
<hr />
<div class="row">
    <h4><?php echo $vacancy->getTitle(); ?></h4>
    <blockquote><?php echo $vacancy->getDescription(); ?></blockquote>
</div>
<?php echo $this->ztbForm($form); ?>

